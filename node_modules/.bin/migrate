#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir//bin/env" ]; then
  "$basedir//bin/env" node "$basedir/../mjml-migrate/lib/cli.js" "$@"
  ret=$?
else 
  /bin/env node "$basedir/../mjml-migrate/lib/cli.js" "$@"
  ret=$?
fi
exit $ret
